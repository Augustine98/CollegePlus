<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cool.test.mycollege.LostItemPreview">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cool.test.mycollege.LostItemPreview">
    <ImageView
        android:layout_width="280sp"
        android:layout_height="280sp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_menu_camera"
        android:id="@+id/lostimage"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/losttext"
    android:text="Object Name"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
    android:layout_below="@+id/lostimage"
    android:layout_centerHorizontal="true"

    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Whats up dude this is something clled awesome stuff bla bla bla."
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/losttext"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:id="@+id/textView3" />



</RelativeLayout>
</ScrollView>
